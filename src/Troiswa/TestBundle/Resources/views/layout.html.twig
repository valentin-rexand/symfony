{% extends "::base.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/troiswatest/css/style.css') }}" />
{% endblock %}

{% block title %}
	Mon bundle
{% endblock %}

{% block body %}
	<div class="troiswatestbundle">
		<div class="sidebar">
			<a href="{{ path('troiswa_test_user_inscript') }}">Inscription</a>
			{{ render(controller('TroiswaTestBundle:User:get_user')) }}
		{% if is_granted ('ROLE_ADMIN') %}
			<a href="{{ path('troiswa_test_role_liste') }}">Roles</a>
			<a href="{{ path('troiswa_test_user_liste') }}">Users</a>
		{% endif %}
		{% if is_granted ('ROLE_USER') %}
		<a href="{{ path('troiswa_test_user_get') }}">Mon compte</a>
		{% endif %}
		</div>
		{% block content %}
		{% endblock %}
		<div class="sidebar">{{ render(controller('TroiswaTestBundle:Default:categories_sidebar')) }}</div>
	</div>
{% endblock %}